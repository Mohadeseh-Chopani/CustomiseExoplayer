<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Exo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Exo" parent="Base.Theme.Exo" />

    <style name="DialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mw_bold</item>
    </style>

    <style name="MyCustomTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:direction">right_to_left</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <!-- Customize your CardView -->
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">#57000000</item>
    </style>

    <style name="MyPopupMenu" parent="@android:style/Widget.PopupWindow">
        <item name="android:popupBackground">@drawable/background_dialog</item>
    </style>
</resources>