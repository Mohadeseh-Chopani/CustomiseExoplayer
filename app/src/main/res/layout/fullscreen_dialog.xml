<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:id="@+id/radioGroup_fullscreen">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill"
            android:fontFamily="@font/iran_sans_medium"
            android:buttonTint="@color/PrimaryColor"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:id="@+id/FillMode"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fit"
            android:fontFamily="@font/iran_sans_medium"
            android:buttonTint="@color/PrimaryColor"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:id="@+id/FitMode"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fixed height"
            android:fontFamily="@font/iran_sans_medium"
            android:buttonTint="@color/PrimaryColor"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:id="@+id/FixedHeightMode"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zoom"
            android:fontFamily="@font/iran_sans_medium"
            android:buttonTint="@color/PrimaryColor"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:id="@+id/ZoomMode"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fixed width"
            android:fontFamily="@font/iran_sans_medium"
            android:buttonTint="@color/PrimaryColor"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:id="@+id/FixedWidthMode"/>

    </RadioGroup>

</LinearLayout>